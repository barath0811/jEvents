<% content_for :title, "Register" %>
<div>
	<div class="row-fluid">
		<h2 class="fl">Register</h2>
		<div id="loginBtnInRegister" class="fr">
			<%= link_to "Login", new_user_session_path, :class => 'btn btn-inverse', :rel => "modal:open", :onclick => "$.modal.close()" %>
		</div>
	</div>
	<div class="wrapper">
		<div class="row-fluid">
			<div id="emailLogin" class="span6">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
				<div class="control-group">
					<div class="controls"><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>
					<div class="controls"><%= f.text_field :name, :autofocus => true, :placeholder => "Name" %></div>
					<div class="controls"><%= f.text_field :mobile, :autofocus => true, :placeholder => 'Mobile #' %></div>
				</div>
				<div class="control-group">
					<div class="controls"><%= f.password_field :password, :placeholder => "Password" %></div>
					<div class="controls"><%= f.password_field :password_confirmation, :placeholder => "Confirm your password" %></div>
				</div>
				<div class="control-group">
					<div class="controls">
						<div class="controls fl">
							<%= f.submit "Register", :class => "btn btn-success" %>
						</div>
						<div class="offset4">
							<% if devise_mapping.rememberable? %>
							<%= f.label :remember_me, class: "checkbox" do %>
							<%= f.check_box :remember_me %>Remember me?
							<% end %>
							<% end %>
						</div>
					</div>
				</div>
				<div class="control-group">
					
				</div>
				<% end %>
                                <div class="field_with_errors">
                                  <%= content_tag(:div, flash[:alert], class: "message") if flash[:alert] %>
                                </div>
			</div>
			<div class="line hidden-phone"></div>
			<div class="wordwrapper hidden-phone">
				<div class="word">or</div>
			</div>
			<div id="socialLogin" class="span6">
				<div>
					<div>
						<%= render "devise/shared/facebook_login" %>
					</div>
					<div>
						<ul>
							<li>One less password to remember</li>
							<li>Easily share with your friends</li>
							<li>We never post without your permission</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render "devise/shared/links" %>
