<% content_for :title, "Login" %>
<div>
	<div class="row-fluid">
		<h2 class="fl">Login</h2>
		<div id="registerBtnInLogin" class="fr">
			<%= link_to "Register", new_user_registration_path, :class => 'btn btn-inverse', :rel => "modal:open", :onclick => "$.modal.close()"  %>
		</div>
	</div>
	<div class="wrapper">
		<div class="row-fluid">
			<div id="emailLogin" class="span6">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>
				<div class="control-group">
					<div class="controls"><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>
				</div>
				<div class="control-group">
					<div class="controls"><%= f.password_field :password, :placeholder => "Password" %></div>
				</div>
				<div class="control-group">
					<div class="controls">
						<div>
							<% if devise_mapping.rememberable? %>
							<%= f.label :remember_me, class: "checkbox" do %>
							<%= f.check_box :remember_me %>Remember me?
							<% end %>
							<% end %>
						</div>
					</div>
				</div>
				<%= content_tag(:div, flash[:alert], class: "error_message") if flash[:alert] %>
				<div class="control-group">
					<div class="controls fl">
						<%= f.submit "Sign in" %>
					</div>
					<div class="offset4">
						<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
						<%= link_to "Forgot password?", new_password_path(resource_name) %><br />
						<% end %>
					</div>
				</div>
				<% end %>
                                
			</div>
			<div class="line hidden-phone"></div>
			<div class="wordwrapper hidden-phone">
				<div class="word">or</div>
			</div>
			<div id="socialLogin" class="span6">
				<div>
					<div>
						<%= render "devise/shared/facebook_login" %>
					</div>
					<div>
						<ul>
							<li>One less password to remember</li>
							<li>Easily share with your friends</li>
							<li>We never post without your permission</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%= render "devise/shared/links" %>